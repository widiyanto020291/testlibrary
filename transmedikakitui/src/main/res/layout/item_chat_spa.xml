<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:orientation="vertical">
    <com.transmedika.transmedikakitui.widget.NetkromTextView
        android:id="@+id/tv_header_dokter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/textDefault"
        android:background="@drawable/bg_header_dokter"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        tools:text="Dr. Widiyanto mengirimkan catatan"
        android:textSize="@dimen/xx_small_text"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="4dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:id="@+id/group_chat_message_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_reply"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingStart="0dp"
                android:paddingEnd="3dp"
                android:paddingBottom="3dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/transparent_gray">
                <LinearLayout
                    android:id="@+id/group_chat_reply_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <View
                        android:layout_width="3.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="7.5dp"
                        android:background="@color/colorAccent"/>

                    <com.transmedika.transmedikakitui.widget.CircleImageView
                        android:id="@+id/img_reply_profile"
                        android:visibility="gone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_circle_place_holder"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.transmedika.transmedikakitui.widget.NetkromTextView
                            android:id="@+id/tv_reply_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:minHeight="0dp"
                            android:textColor="@color/colorAccent"
                            tools:text="Widiyanto" />

                        <com.transmedika.transmedikakitui.widget.NetkromTextView
                            android:id="@+id/tv_reply_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="288dp"
                            android:paddingBottom="5dp"
                            tools:text="Mainan ini sudah bisa kalian dapatkan"
                            android:textColor="@android:color/darker_gray"
                            android:paddingEnd="5dp"
                            android:paddingStart="0dp"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_forward"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="288dp"
                android:paddingStart="12dp"
                android:paddingEnd="15dp"
                android:drawableStart="@drawable/ic_forward_gray"
                android:text="@string/teruskan"
                android:textStyle="italic"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:gravity="center_vertical"
                    android:paddingEnd="0dp"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:contentDescription="@string/content_desc"
                        app:srcCompat="@drawable/ic_catatan_dari_dokter"
                        android:layout_width="35dp"
                        android:layout_height="34dp"/>
                    <com.transmedika.transmedikakitui.widget.NetkromTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="10dp"
                        android:textSize="@dimen/small_text"
                        android:text="@string/diagnosa_dari_dokter"/>
                    <com.transmedika.transmedikakitui.widget.NetkromTextView
                        android:id="@+id/tv_detail"
                        android:textSize="@dimen/xx_small_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/btn_add"
                        android:text="@string/detail"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
                <include layout="@layout/common_line_horiz"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.transmedika.transmedikakitui.widget.NetkromTextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/symptoms"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:textColor="@color/textDefault"
                        android:textSize="@dimen/small_text"/>

                </LinearLayout>
                <com.transmedika.transmedikakitui.widget.NetkromTextView
                    android:id="@+id/tv_symptoms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="- Kurangi makanan berlemak"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="start"
                    android:textColor="@color/textDefault"
                    android:textSize="@dimen/x_small_text"/>
                <com.transmedika.transmedikakitui.widget.NetkromTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/posible_diagnosis"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:textColor="@color/textDefault"
                    android:textSize="@dimen/small_text"/>
                <com.transmedika.transmedikakitui.widget.NetkromTextView
                    android:id="@+id/tv_posible_diagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="- Kurangi makanan berlemak"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="2.5dp"
                    android:gravity="start"
                    android:textColor="@color/textDefault"
                    android:textSize="@dimen/x_small_text"/>
                <com.transmedika.transmedikakitui.widget.NetkromTextView
                    android:id="@+id/tv_label_icd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icd"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:textColor="@color/textDefault"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:textSize="@dimen/small_text"/>
                <com.transmedika.transmedikakitui.widget.NetkromTextView
                    android:id="@+id/tv_icd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="- ICD kosong satu"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="start"
                    android:textColor="@color/textDefault"
                    android:text="@string/strip"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:textSize="@dimen/x_small_text"/>
                <com.transmedika.transmedikakitui.widget.NetkromTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/advice"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:textColor="@color/textDefault"
                    android:textSize="@dimen/small_text"/>
                <com.transmedika.transmedikakitui.widget.NetkromTextView
                    android:id="@+id/tv_advice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="- Kurangi makanan berlemak"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="start"
                    android:textColor="@color/textDefault"
                    android:textSize="@dimen/x_small_text"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginTop="2.5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <com.transmedika.transmedikakitui.widget.NetkromTextView
                    android:id="@+id/tv_date"
                    android:paddingStart="2dp"
                    android:paddingEnd="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#8e8e8e"
                    android:layout_gravity="center_horizontal"
                    tools:text="12:00"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
                <ImageView
                    android:id="@+id/img_status"
                    android:contentDescription="@string/content_desc"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/received"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>