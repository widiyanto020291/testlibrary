<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35">

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_password"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_title">

            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_new_password"
                android:textSize="@dimen/small_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/kata_sandi_baru"
                android:textColor="@color/textDefault" />

            <com.transmedika.transmedikakitui.widget.ShowHidePasswordEditText
                android:id="@+id/ed_password_new"
                android:textSize="@dimen/small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ed_normal"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/textDefault" />

            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_ket"
                android:textSize="@dimen/xx_small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/gunakan_kombinasi_huruf"
                android:textColor="@color/gray2" />

            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_new_password_konfirm"
                android:textSize="@dimen/small_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/kata_sandi_baru_konfirm"
                android:textColor="@color/textDefault" />

            <com.transmedika.transmedikakitui.widget.ShowHidePasswordEditText
                android:id="@+id/ed_password_new_konfirm"
                android:textSize="@dimen/small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ed_normal"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/textDefault" />

        </LinearLayout>

        <include
            android:id="@+id/line"
            layout="@layout/common_line_horiz"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/ll_password"/>

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_desc"
            android:textSize="@dimen/small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password_otp_desc"
            android:textColor="@color/textDefault"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line" />

        <com.transmedika.transmedikakitui.widget.NetkromEditText
            android:id="@+id/ed_phone"
            android:textSize="@dimen/small_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ed_normal"
            android:hint="@string/nomer_ponsel"
            android:inputType="phone"
            android:maxLines="1"
            android:textColor="@color/textDefault"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc" />

        <ProgressBar
            android:id="@+id/pb_validasi"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/ed_phone"
            app:layout_constraintEnd_toEndOf="@id/ed_phone"
            app:layout_constraintTop_toTopOf="@+id/ed_phone"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.transmedika.transmedikakitui.widget.NetkromButton
        android:id="@+id/btn_send"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_primary_enabled_stat"
        android:enabled="false"
        android:text="@string/kirim"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <com.transmedika.transmedikakitui.widget.NetkromTextView
        android:id="@+id/tv_remember"
        android:textSize="@dimen/small_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/remember_password"
        android:maxLines="1"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_send" />

</androidx.constraintlayout.widget.ConstraintLayout>