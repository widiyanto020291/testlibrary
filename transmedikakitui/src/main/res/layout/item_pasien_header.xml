<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="4dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="80dp"
            android:layout_height="88dp"
            android:background="@drawable/bg_img_rec"
            android:scaleType="centerCrop"
            android:contentDescription="@string/content_desc" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/content_desc"
        app:layout_constraintBottom_toTopOf="@+id/tv_label_tb"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24" />

    <Spinner
        android:id="@+id/sp_keluarga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textAlignment="textStart"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_value_spinner"
        app:layout_constraintEnd_toEndOf="@+id/iv_arrow_down"
        app:layout_constraintStart_toEndOf="@id/cv_img"
        app:layout_constraintTop_toTopOf="parent" />

    <com.transmedika.transmedikakitui.widget.NetkromTextView
        android:id="@+id/tv_value_spinner"
        android:textSize="@dimen/small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/umur"
        android:textColor="@color/textDefault"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_bb"
        app:layout_constraintStart_toStartOf="@+id/tv_umur"
        app:layout_constraintTop_toTopOf="@+id/tv_label_bb" />

    <com.transmedika.transmedikakitui.widget.NetkromTextView
        android:id="@+id/tv_umur"
        android:textSize="@dimen/xx_small_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="@string/strip"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bb"
        app:layout_constraintEnd_toStartOf="@+id/tv_bb"
        app:layout_constraintStart_toEndOf="@id/cv_img"
        app:layout_constraintTop_toTopOf="@+id/tv_bb"
        tools:text="100 Tahun" />

    <com.transmedika.transmedikakitui.widget.NetkromTextView
        android:id="@+id/tv_label_bb"
        android:textSize="@dimen/small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="@string/bb"
        android:textColor="@color/textDefault"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_tb"
        app:layout_constraintEnd_toStartOf="@+id/tv_label_tb"
        app:layout_constraintTop_toTopOf="@+id/tv_label_tb" />

    <com.transmedika.transmedikakitui.widget.NetkromTextView
        android:id="@+id/tv_bb"
        android:textSize="@dimen/xx_small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strip"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tb"
        app:layout_constraintStart_toStartOf="@+id/tv_label_bb"
        app:layout_constraintTop_toTopOf="@+id/tv_tb"
        tools:text="999kg" />

    <com.transmedika.transmedikakitui.widget.NetkromTextView
        android:id="@+id/tv_label_tb"
        android:textSize="@dimen/small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:text="@string/tb"
        android:textColor="@color/textDefault"
        app:layout_constraintBottom_toTopOf="@+id/tv_tb"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit"
        app:layout_constraintTop_toBottomOf="@+id/iv_arrow_down" />

    <com.transmedika.transmedikakitui.widget.NetkromTextView
        android:id="@+id/tv_tb"
        android:textSize="@dimen/xx_small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/strip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_label_tb"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_tb"
        tools:text="999cm" />

    <com.transmedika.transmedikakitui.widget.NetkromButton
        android:id="@+id/btn_edit"
        android:textSize="@dimen/x_small_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical|top"
        android:background="@drawable/btn_rec"
        android:drawableStart="@drawable/ic_edit_white"
        android:drawablePadding="5dp"
        android:gravity="start|center_vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/ubah"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>