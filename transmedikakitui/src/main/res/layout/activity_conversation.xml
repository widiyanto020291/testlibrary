<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/v_anchor"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:layout_width="1dp"
        android:layout_height="0dp"/>

    <LinearLayout
        android:id="@+id/ll_main_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:visibility="visible">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.transmedika.transmedikakitui.widget.CommonToolbarMessage
                android:id="@+id/common_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_me_2"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                android:id="@+id/ll_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <com.transmedika.transmedikakitui.widget.NetkromTextView
                    android:id="@+id/tv_pasien"
                    android:textSize="@dimen/small_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    tools:text="Widiyanto" />

                <com.transmedika.transmedikakitui.widget.NetkromTextView
                    android:id="@+id/tv_date"
                    android:textSize="@dimen/xx_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    tools:text="12 Okt 2020" />

                <ImageView
                    android:id="@+id/img_show_hide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="15dp"
                    android:contentDescription="@string/content_desc"
                    android:rotation="90"
                    app:srcCompat="@drawable/ic_navigation_left" />
            </LinearLayout>

            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_no_rm"
                android:textSize="@dimen/small_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@android:color/black"
                tools:text="No RM 000000001" />

            <LinearLayout
                android:id="@+id/ll_show_hide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.transmedika.transmedikakitui.widget.NetkromTextView
                            android:textSize="@dimen/small_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/umur"
                            android:textColor="@color/textDefault" />

                        <com.transmedika.transmedikakitui.widget.NetkromTextView
                            android:id="@+id/tv_umur"
                            android:textSize="@dimen/xx_small_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2.5dp"
                            android:text="@string/strip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <com.transmedika.transmedikakitui.widget.NetkromTextView
                            android:textSize="@dimen/small_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bb"
                            android:textColor="@color/textDefault" />

                        <com.transmedika.transmedikakitui.widget.NetkromTextView
                            android:id="@+id/tv_bb"
                            android:textSize="@dimen/xx_small_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2.5dp"
                            android:text="@string/strip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.transmedika.transmedikakitui.widget.NetkromTextView
                            android:textSize="@dimen/small_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tb"
                            android:textColor="@color/textDefault" />

                        <com.transmedika.transmedikakitui.widget.NetkromTextView
                            android:id="@+id/tv_tb"
                            android:textSize="@dimen/xx_small_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2.5dp"
                            android:text="@string/strip" />
                    </LinearLayout>
                    <com.transmedika.transmedikakitui.widget.NetkromButton
                        android:id="@+id/btn_tampilkan_jawaban"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_rec"
                        android:text="@string/tampilkan_jawaban"
                        android:textColor="@color/white" />
                </LinearLayout>

                <com.transmedika.transmedikakitui.widget.NetkromTextView
                    android:id="@+id/tv_lbl_keluhan"
                    android:textSize="@dimen/small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/keluhan"
                    tools:visibility="visible"
                    android:textColor="@color/textDefault" />

                <com.transmedika.transmedikakitui.widget.NetkromTextView
                    android:id="@+id/tv_keluhan"
                    android:textSize="@dimen/xx_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2.5dp"
                    tools:visibility="visible"
                    android:layout_marginEnd="15dp"
                    tools:text="Susah buang air besar." />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_chat_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <include
                android:id="@+id/line"
                layout="@layout/common_line_horiz"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/layout_input_area"/>
            <LinearLayout
                android:id="@+id/layout_input_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:minHeight="48dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_reply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="0dp"
                        android:orientation="horizontal"
                        android:paddingStart="0dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="3dp"
                        android:paddingBottom="3dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/transparent_gray"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:id="@+id/group_chat_reply_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <View
                                android:layout_width="3.5dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="7.5dp"
                                android:background="@color/colorAccent" />

                            <com.transmedika.transmedikakitui.widget.CircleImageView
                                android:id="@+id/img_reply_profile"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/bg_circle_place_holder"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.transmedika.transmedikakitui.widget.NetkromTextView
                                    android:id="@+id/tv_replay_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="5dp"
                                    android:minHeight="0dp"
                                    android:textColor="@color/colorAccent"
                                    tools:text="Widiyanto" />

                                <com.transmedika.transmedikakitui.widget.NetkromTextView
                                    android:id="@+id/tv_reply_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2.5dp"
                                    android:layout_marginBottom="5dp"
                                    android:maxWidth="288dp"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="5dp"
                                    android:paddingBottom="5dp"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp"
                                    tools:text="Mainan ini sudah bisa kalian dapatkan" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_close"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end|top"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:contentDescription="@string/content_desc"
                            android:src="@drawable/ic_close_2" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_link_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="0dp"
                        android:orientation="horizontal"
                        android:paddingStart="0dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="3dp"
                        android:paddingBottom="3dp"
                        android:visibility="gone"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_preview"
                                android:layout_width="85dp"
                                android:layout_height="85dp"
                                android:contentDescription="@string/content_desc" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:orientation="vertical">

                                <com.transmedika.transmedikakitui.widget.NetkromTextView
                                    android:id="@+id/tv_desc"
                                    android:textSize="@dimen/x_small_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="3"
                                    android:textColor="@color/textDefault"
                                    tools:text="Baiknya di rumah ajah xxxx xxxxx xxxxx xxxx xxxx xxx xxxxx xxxx xxxx xxxxx xxxxx xxxx kkkkkkk bbbbbbbb" />

                                <com.transmedika.transmedikakitui.widget.NetkromTextView
                                    android:id="@+id/tv_web"
                                    android:textSize="@dimen/xx_small_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2.5dp"
                                    tools:text="www.google.com" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <FrameLayout
                        android:id="@+id/ll_input_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <com.transmedika.transmedikakitui.widget.NetkromEditText
                            android:id="@+id/ed_chat"
                            android:textSize="@dimen/small_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@android:color/transparent"
                            android:hint="@string/ketik_pesan"
                            android:inputType="textMultiLine|textShortMessage"
                            android:maxLines="6"
                            android:paddingStart="24dp"
                            android:paddingTop="7.5dp"
                            android:paddingEnd="28dp"
                            android:maxLength="2000"
                            android:paddingBottom="7.5dp" />

                        <ImageButton
                            android:id="@+id/img_emoticon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="start|bottom"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="?attr/selectableItemBackground"
                            android:contentDescription="@string/content_desc"
                            android:padding="3dp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_attachment" />

                        <ImageButton
                            android:id="@+id/img_image"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="end|bottom"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="?attr/selectableItemBackground"
                            android:contentDescription="@string/content_desc"
                            android:padding="3dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_photo" />
                    </FrameLayout>
                </LinearLayout>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fb_send"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|bottom"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="@string/content_desc"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_send"
                    app:tint="@android:color/white"
                    android:textSize="14sp"
                    app:backgroundTint="@color/colorPrimary"
                    app:elevation="0dp"
                    app:fabCustomSize="40dp"
                    app:maxImageSize="20dp" />
            </LinearLayout>


            <FrameLayout
                android:id="@+id/view_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/layout_input_area">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="1dp"
                    android:scrollbars="none"/>
            </FrameLayout>


            <FrameLayout
                android:id="@+id/fl_fab_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/line"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_alignParentEnd="true">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fb_gotoDown"
                    android:layout_gravity="center_vertical|bottom"
                    android:contentDescription="@string/content_desc"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    app:backgroundTint="@color/gray"
                    app:tint="@color/white"
                    app:fabCustomSize="40dp"
                    app:elevation="0dp"
                    app:maxImageSize="20dp"
                    android:alpha="0.75"
                    android:rotation="90"
                    tools:visibility="visible"
                    android:layout_margin="16dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_baseline_double_arrow_24"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp" />
                <com.transmedika.transmedikakitui.widget.NetkromTextView
                    android:id="@+id/tv_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="@dimen/xx_small_text"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:minWidth="25dp"
                    android:maxLength="2"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/chat_badge_faskes"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="10"/>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>