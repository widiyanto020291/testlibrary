<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    app:contentPadding="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image"
            android:background="@drawable/bg_img_rec"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/content_desc"/>
        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_name"
            app:textAllCaps="true"
            android:minLines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="7.5dp"
            android:textSize="@dimen/xx_small_text"
            android:textColor="@android:color/black"
            tools:text="Redoxon 1 Dus"/>
        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:textSize="@dimen/xx_small_text"
            android:textColor="@android:color/black"
            android:layout_marginTop="2.5dp"
            tools:text="Rp20.000 - 100.000"/>
        <com.transmedika.transmedikakitui.widget.NetkromButton
            android:id="@+id/btn_tambah"
            android:background="@drawable/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="7.5dp"
            android:textSize="@dimen/xx_small_text"
            android:layout_gravity="center_horizontal|bottom"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:text="@string/tambah"/>
        <LinearLayout
            android:id="@+id/ll_plus_min"
            android:visibility="gone"
            android:layout_marginTop="7.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/imgb_min"
                android:padding="2.5dp"
                android:contentDescription="@string/content_desc"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/btn_plus"
                app:srcCompat="@drawable/ic_minus"/>
            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/x_small_text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:background="@drawable/bg_text_add_min"
                android:textColor="@android:color/black"
                tools:text="5"/>
            <ImageButton
                android:id="@+id/imgb_plus"
                android:padding="2.5dp"
                android:contentDescription="@string/content_desc"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/btn_minus"
                app:srcCompat="@drawable/ic_plus"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>