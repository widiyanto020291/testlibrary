<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.transmedika.transmedikakitui.widget.NetkromTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/pilih_metode"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <ImageView
            android:id="@+id/civ_mail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_mail" />

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_mail"
            android:textSize="@dimen/small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:text="@string/email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/civ_mail"
            app:layout_constraintTop_toTopOf="@+id/civ_mail" />

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_mail_desc"
            android:textSize="@dimen/xx_small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:text="@string/kirim_link_reset_kata_kunci_ke_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/civ_mail"
            app:layout_constraintTop_toBottomOf="@+id/tv_mail" />

        <View
            android:id="@+id/l_mail"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/line_light"
            app:layout_constraintEnd_toEndOf="@id/tv_mail_desc"
            app:layout_constraintStart_toStartOf="@id/tv_mail_desc"
            app:layout_constraintTop_toBottomOf="@id/tv_mail_desc" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_mail">

        <ImageView
            android:id="@+id/civ_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_message"
            app:tint="@color/colorPrimary" />

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_menu"
            android:textSize="@dimen/small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/civ_menu"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:text="@string/pesan_otp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/civ_menu"
            app:layout_constraintTop_toTopOf="@+id/civ_menu" />

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_menu_desc"
            android:textSize="@dimen/xx_small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/civ_menu"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:text="@string/meminta_otp_untuk_melakukan_reset_kata_kunci"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/civ_menu"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/line_light"
            app:layout_constraintEnd_toEndOf="@id/tv_menu_desc"
            app:layout_constraintStart_toStartOf="@id/tv_menu_desc"
            app:layout_constraintTop_toBottomOf="@id/tv_menu_desc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout >