<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:contentPaddingRight="10dp"
    app:contentPaddingLeft="10dp"
    app:contentPaddingTop="16dp"
    app:contentPaddingBottom="16dp"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/root_view">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <com.airbnb.lottie.LottieAnimationView
                android:contentDescription="@string/content_desc"
                android:id="@+id/img"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_title"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:textColor="@color/textDefault"
                tools:text="Hapus"/>
        </LinearLayout>

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_sub_title"
            android:textSize="@dimen/small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/textDefault"
            tools:text="Apakah Anda yakin hapus data ini?" />

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_ket"
            android:textSize="@dimen/xx_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/gray"
            android:layout_marginTop="12dp"
            tools:text="*Apakah Anda yakin hapus data ini?" />

        <LinearLayout
            android:id="@+id/ll_button_main"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">
            <com.transmedika.transmedikakitui.widget.NetkromButton
                android:id="@+id/btn_batal"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:textAllCaps="false"
                android:textSize="@dimen/x_small_text"
                android:layout_marginEnd="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/gray"
                android:background="@drawable/btn_rec_disable"
                tools:text="Batal"/>
            <com.transmedika.transmedikakitui.widget.NetkromButton
                android:id="@+id/btn_ya"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginStart="5dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/btn_rec_red"
                android:textSize="@dimen/x_small_text"
                tools:text="Hapus"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
