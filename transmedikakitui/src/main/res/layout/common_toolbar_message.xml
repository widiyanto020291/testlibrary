<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetEnd="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStartWithNavigation="0dp">

    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:layout_height="35dp">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/content_desc"/>
            <com.transmedika.transmedikakitui.widget.CircleImageView
                android:id="@+id/civ_profile"
                android:layout_toEndOf="@id/img_back"
                android:layout_marginStart="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/bg_circle_place_holder"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_title"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/textDefault"
                tools:text="Dr. Widiyanto"
                android:textSize="@dimen/small_text"/>
            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_toolbar_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit ="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:layout_gravity="center_vertical"
                android:textColor="@color/gray"
                tools:text="sedang mengetik resep..."
                android:textSize="@dimen/x_small_text"/>
        </LinearLayout>
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>