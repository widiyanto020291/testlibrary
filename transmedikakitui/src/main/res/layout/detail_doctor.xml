<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_profile"
        android:contentDescription="@string/content_desc"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="matrix"
        android:background="@color/line_light"
        android:adjustViewBounds="true"/>
    <RelativeLayout
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_nama"
            android:layout_marginStart="2.5dp"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:maxWidth="200dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_small_text"
            android:textColor="@color/textDefault"
            tools:text="Dr. Widiyanto Widiyanto Widiyanto Widiyanto"/>
        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_status"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:maxWidth="100dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/xx_small_text"
            tools:background="@drawable/bg_status_online"
            tools:text="Tersedia"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_spesialis"
            android:layout_marginStart="2.5dp"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray3"
            android:textSize="@dimen/x_small_text"
            tools:text="Dokter Umum"/>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rv_status_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30dp"
            android:minHeight="25dp">
            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_desc"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/xx_small_text"
                android:textColor="@color/green"
                android:layout_centerInParent="true"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:background="@drawable/bg_online1"
                tools:text="Available"/>
            <View
                android:id="@+id/img_status"
                android:layout_marginEnd="5dp"
                android:layout_alignParentTop="true"
                android:visibility="visible"
                android:layout_width="10.5dp"
                android:layout_height="10.5dp"
                tools:background="@drawable/bg_online"
                android:contentDescription="@string/content_desc" />
        </RelativeLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="16dp">

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_label_pengalaman"
            android:textSize="@dimen/x_small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/experiences"
            android:textColor="@color/black"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_label_biaya"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_star"
            android:contentDescription="@string/content_desc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_label_pengalaman"
            app:layout_constraintStart_toStartOf="@id/tv_label_pengalaman"
            android:src="@drawable/ic_star"/>

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_rating"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x_small_text"
            android:textColor="@color/textDefault"
            app:layout_constraintStart_toEndOf="@id/iv_star"
            app:layout_constraintTop_toTopOf="@id/iv_star"
            app:layout_constraintBottom_toBottomOf="@id/iv_star"
            tools:text="5,0"/>

        <ImageView
            android:id="@+id/iv_pengalaman"
            android:contentDescription="@string/content_desc"
            android:layout_marginStart="12dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_logo_blue"
            app:layout_constraintStart_toEndOf="@id/tv_rating"
            app:layout_constraintTop_toTopOf="@id/iv_star"
            app:layout_constraintBottom_toBottomOf="@id/iv_star"/>

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_pengalaman"
            android:textSize="@dimen/x_small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2.5dp"
            android:textColor="@color/textDefault"
            app:layout_constraintBottom_toBottomOf="@id/iv_star"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_pengalaman"
            app:layout_constraintStart_toEndOf="@id/iv_pengalaman"
            app:layout_constraintTop_toTopOf="@id/iv_star"
            tools:text="99 Tahun" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/tv_label_pengalaman"
            app:layout_constraintTop_toBottomOf="@id/tv_label_pengalaman">


        </LinearLayout>

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_label_biaya"
            android:textSize="@dimen/x_small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/consultation_price"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_label_pengalaman"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_rp"
            android:contentDescription="@string/content_desc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_rupiah"
            app:layout_constraintTop_toBottomOf="@id/tv_label_biaya"
            app:layout_constraintStart_toStartOf="@id/tv_label_biaya"/>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexboxLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_rp"
            app:layout_constraintTop_toTopOf="@id/iv_rp">

            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_harga"
                android:textSize="@dimen/x_small_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:textColor="@color/textDefault"
                tools:text="Rp25.000" />

            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_harga_diskon"
                android:textSize="@dimen/xx_small_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:textColor="@color/gray1"
                android:visibility="visible"
                tools:text="Rp25.000" />

        </com.google.android.flexbox.FlexboxLayout>

        <ImageView
            android:id="@+id/iv_str"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/content_desc"
            android:src="@drawable/ic_str"
            app:layout_constraintStart_toStartOf="@id/tv_label_pengalaman"
            app:layout_constraintTop_toBottomOf="@+id/flexboxLayout" />

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_label_str"
            android:textSize="@dimen/x_small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/str_number"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/iv_str"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_pengalaman"
            app:layout_constraintStart_toEndOf="@id/iv_str"
            app:layout_constraintTop_toTopOf="@id/iv_str" />

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_str"
            android:textSize="@dimen/x_small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/gray4"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_str"
            app:layout_constraintStart_toStartOf="@+id/tv_label_str"
            app:layout_constraintTop_toBottomOf="@id/iv_str"
            tools:text="0393939393939393" />

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_label_jadwal"
            android:textSize="@dimen/x_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/constation_schedule"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/tv_label_biaya"
            app:layout_constraintTop_toTopOf="@+id/iv_str" />

        <ImageView
            android:id="@+id/iv_time"
            android:contentDescription="@string/content_desc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_time"
            app:layout_constraintTop_toBottomOf="@id/tv_label_jadwal"
            app:layout_constraintStart_toStartOf="@id/tv_label_jadwal"/>

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_jadwal_konsul"
            android:textSize="@dimen/x_small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:drawablePadding="5dp"
            android:textColor="@color/textDefault"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_time"
            app:layout_constraintTop_toTopOf="@id/iv_time"
            tools:text="Setiap hari, 08.00 - 16.00" />

        <ImageView
            android:id="@+id/iv_alumni"
            android:contentDescription="@string/content_desc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_alumi"
            app:layout_constraintStart_toStartOf="@id/tv_label_pengalaman"
            app:layout_constraintTop_toBottomOf="@id/tv_str"/>

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_label_alumni"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x_small_text"
            android:textColor="@color/black"
            android:text="@string/alumni"
            app:layout_constraintBottom_toBottomOf="@id/iv_alumni"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_pengalaman"
            app:layout_constraintStart_toEndOf="@id/iv_alumni"
            app:layout_constraintTop_toTopOf="@id/iv_alumni"/>

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_alumni"
            android:textSize="@dimen/x_small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/gray4"
            android:lineSpacingMultiplier="1.25"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_alumni"
            app:layout_constraintStart_toStartOf="@id/tv_label_alumni"
            app:layout_constraintTop_toBottomOf="@id/tv_label_alumni"
            tools:text="Universitas Pajajaran\nUniversitas Gajah Mada" />

        <ImageView
            android:id="@+id/iv_praktik"
            android:contentDescription="@string/content_desc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_tempat_praktik"
            app:layout_constraintStart_toStartOf="@id/tv_label_pengalaman"
            app:layout_constraintTop_toBottomOf="@id/tv_alumni"/>

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_label_praktik"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x_small_text"
            android:textColor="@color/black"
            android:text="@string/tempat_praktik"
            app:layout_constraintBottom_toBottomOf="@id/iv_praktik"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_pengalaman"
            app:layout_constraintStart_toEndOf="@id/iv_praktik"
            app:layout_constraintTop_toTopOf="@id/iv_praktik"/>

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_praktik"
            android:layout_marginTop="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x_small_text"
            android:textColor="@color/gray4"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_praktik"
            app:layout_constraintStart_toStartOf="@id/tv_label_praktik"
            app:layout_constraintTop_toBottomOf="@id/tv_label_praktik"
            tools:text="RS. Hasan Sadikin"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.transmedika.transmedikakitui.widget.NetkromButton
        android:id="@+id/btn_chat"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:minWidth="160dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_primary"
        android:text="@string/chat"
        android:layout_gravity="center"
        android:textColor="@color/white"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="15sp"/>
</LinearLayout>