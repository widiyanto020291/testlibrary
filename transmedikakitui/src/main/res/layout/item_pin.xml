<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/et_pin_in"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@null"
            android:cursorVisible="false"
            android:maxLength="6"
            android:textColor="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="numberPassword" />

        <com.transmedika.transmedikakitui.widget.NetkromTextView
            android:id="@+id/tv_label"
            android:textSize="@dimen/small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textTitle"
            app:layout_constraintBottom_toBottomOf="@+id/iv_visible"
            app:layout_constraintStart_toStartOf="@+id/cl_pin_1"
            app:layout_constraintTop_toTopOf="@+id/iv_visible" />

        <ImageView
            android:id="@+id/iv_visible"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_visibility_off_24dp"
            app:layout_constraintEnd_toEndOf="@+id/cl_pin_6"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_pin_1"
            style="@style/PinContainer"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cl_pin_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_visible">

            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_char_1"
                style="@style/Pin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1" />

            <View
                style="@style/PinLine"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_pin_2"
            style="@style/PinContainer"
            app:layout_constraintBottom_toBottomOf="@id/cl_pin_1"
            app:layout_constraintEnd_toStartOf="@+id/cl_pin_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cl_pin_1"
            app:layout_constraintTop_toTopOf="@id/cl_pin_1">

            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_char_2"
                style="@style/Pin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1" />

            <View
                style="@style/PinLine"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_pin_3"
            style="@style/PinContainer"
            app:layout_constraintBottom_toBottomOf="@id/cl_pin_1"
            app:layout_constraintEnd_toStartOf="@+id/cl_pin_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cl_pin_2"
            app:layout_constraintTop_toTopOf="@id/cl_pin_1">

            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_char_3"
                style="@style/Pin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1" />

            <View
                style="@style/PinLine"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_pin_4"
            style="@style/PinContainer"
            app:layout_constraintBottom_toBottomOf="@id/cl_pin_1"
            app:layout_constraintEnd_toStartOf="@+id/cl_pin_5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cl_pin_3"
            app:layout_constraintTop_toTopOf="@id/cl_pin_1">

            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_char_4"
                style="@style/Pin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1" />

            <View
                style="@style/PinLine"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_pin_5"
            style="@style/PinContainer"
            app:layout_constraintBottom_toBottomOf="@id/cl_pin_1"
            app:layout_constraintEnd_toStartOf="@+id/cl_pin_6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cl_pin_4"
            app:layout_constraintTop_toTopOf="@id/cl_pin_1">

            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_char_5"
                style="@style/Pin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1" />

            <View
                style="@style/PinLine"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_pin_6"
            style="@style/PinContainer"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@id/cl_pin_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cl_pin_5"
            app:layout_constraintTop_toTopOf="@id/cl_pin_1">

            <com.transmedika.transmedikakitui.widget.NetkromTextView
                android:id="@+id/tv_char_6"
                style="@style/Pin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1" />

            <View
                style="@style/PinLine"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.transmedika.transmedikakitui.widget.NetkromTextView
        android:id="@+id/tv_error"
        android:textSize="@dimen/xx_small_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        tools:text="@tools:sample/lorem/random"
        android:maxLines="2"
        android:visibility="gone"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="2dp"
        android:drawableStart="@drawable/ic_info_16dp"
        app:drawableTint="@color/red"
        android:drawablePadding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_visible"
        app:layout_constraintStart_toStartOf="@+id/cl_pin_1"
        app:layout_constraintTop_toTopOf="@+id/iv_visible" />

</LinearLayout>