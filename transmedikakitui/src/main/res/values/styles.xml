<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_filter</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialog</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetDialog</item>
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="DialogTheme" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textDefault</item>
        <item name="android:textColorSecondary">@color/textDefault</item>
    </style>

    <style name="textCountSingle">
        <item name="textview_size">@dimen/x_small_text</item>
        <item name="edittext_size">@dimen/small_text</item>
        <item name="edittext_text_color">@color/textDefault</item>
        <item name="edittext_hint_color">@color/tabUnselect</item>
    </style>

    <style name="StarFeedback">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/primary_star_checkbox</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="TextViewTagRecommend">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_alamat_default_2</item>
        <item name="android:textColor">@color/textDefault</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">2.5dp</item>
        <item name="android:paddingBottom">2.5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:tag">line</item>
    </style>

    <style name="OtpContainer">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:background">@drawable/ed_normal</item>
    </style>

    <style name="Otp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLength">1</item>
        <!--<item name="android:background">@drawable/bg_pin_dot</item>-->

        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="OtpLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:tag">line</item>
    </style>

    <style name="PinContainer">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <!--        <item name="android:background">@drawable/bgwhite_linebottom_default</item>-->
    </style>

    <style name="Pin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLength">1</item>
        <item name="android:background">@drawable/bg_pin_dot</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PinLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:tag">line</item>
    </style>

    <style name="ButtonSubmit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/bg_primary_enabled_stat</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>