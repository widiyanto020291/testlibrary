            <flag name="top" value="48" />
        </attr>
        <attr name="inputType">
            <flag name="text" value="1" />
            <flag name="multiline" value="131072" />
        </attr>
        <attr name="imeOption">
            <flag name="action_next" value="5" />
            <flag name="action_done" value="6" />
