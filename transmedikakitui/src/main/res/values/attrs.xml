    <declare-styleable name="PinView">
        <attr name="show" format="boolean"/>
        <attr name="title"/>
        <attr name="error" format="string"/>
        <attr name="colorPin" format="color"/>
        <attr name="colorLine" format="color"/>
        <attr name="colorFocus" format="color"/>
        <attr name="showHideIconVisibility">
            <enum name="visible" value="1" />
            <enum name="invisible" value="0" />
        </attr>
    </declare-styleable>
