    <declare-styleable name="TextArea">
        <attr name="orientation"/>
        <attr name="max_length" format="integer"/>
        <attr name="textview_font" format="string"/>
        <attr name="edittext_font" format="string"/>
        <attr name="textview_size" format="dimension"/>
        <attr name="edittext_height" format="dimension"/>
